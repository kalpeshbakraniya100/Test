@model IEnumerable<Data.Entities.Customers>
@{
    Layout = null;
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/e9b92a87d7.js" crossorigin="anonymous"></script>
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">CustomerID</th>
                    <th class="th-sm">ClientCustomerID</th>
                    <th class="th-sm">AccountID</th>
                    <th class="th-sm">FirstName</th>
                    <th class="th-sm">LastName</th>
                    <th class="th-sm">Address1</th>
                    <th class="th-sm">Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.CustomerID </td>
                    <td> @item.ClientCustomerID </td>
                    <td> @item.AccountID </td>
                    <td> @item.FirstName </td>
                    <td> @item.LastName </td>
                    <td> @item.Address1 </td>
                    <td class="" style="white-space: nowrap;">
                        <a href="@Url.Action("DeleteData", "Home", new { id = item.CustomerID  })" title="Delete"><span class="fas fa-trash-alt"></span></a>
                    </td>
                </tr>
            }
        </table>
    }
</div>
